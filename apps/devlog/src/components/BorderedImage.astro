---
import { Picture } from 'astro:assets'

import Glow from './Glow.astro'

interface Props {
  alt: string
  class?: string
  glow?: {
    blur?: string
    colors?: string[]
    duration?: string
    opacity?: number
  }
  image: {
    format: 'avif' | 'gif' | 'jpeg' | 'jpg' | 'png' | 'svg' | 'tiff' | 'webp'
    height: number
    src: string
    width: number
  }
  objectFit?: string
}

const {
  alt,
  class: className,
  glow: { blur, colors, duration, opacity } = {},
  image,
  objectFit = 'cover',
} = Astro.props
---

<div
  class="relative mb-2 w-full drop-shadow-md transition-all after:pointer-events-none after:absolute after:inset-0 after:rounded-lg after:border after:border-white/10 dark:drop-shadow-none"
  class:list={[className]}
>
  {
    colors ? (
      <Glow blur={blur} colors={colors} duration={duration} opacity={opacity} />
    ) : null
  }
  <div class="relative h-full w-full overflow-hidden rounded-lg">
    <Picture
      alt={alt}
      class="aspect-4/3 rounded-lg bg-cover bg-center bg-no-repeat object-top transition-all duration-500 ease-out group-hover:scale-105 group-hover:brightness-110 group-hover:contrast-125"
      formats={['jpg', 'webp', 'avif']}
      src={image}
      style={{ objectFit }}
      widths={[860, 1080]}
    />
  </div>
</div>
